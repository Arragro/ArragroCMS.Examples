{
  "extends": "tslint-config-standard",
  "rules": {
    "ter-indent": [ true, 4 ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "exclude": ["**/*.js"],
    "no-irregular-whitespace":  false,
    "semicolon": [true, "never"]
  }
}
