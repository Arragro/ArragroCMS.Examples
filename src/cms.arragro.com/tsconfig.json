{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strict": true,
      "skipLibCheck": false,
      "outDir": "./dist/",
      "lib": ["es6", "es7", "dom"]
  },
  "include": [
      "./ReactApp/boot.ts",
      "./types"
  ],
  "exclude": ["dist", "build"]
}