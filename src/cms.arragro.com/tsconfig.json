{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "lib": [ "es6", "dom" ],
    "types": [ "webpack-env" ]
  },
  "compileOnSave": false,
  "files": [
    "typings/index.d.ts"
  ],
  "include": [
    "ReactApp"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "typings/custom"
  ]
}